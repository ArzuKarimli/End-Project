@model EditCourseVM

@{
    Layout = null;
}

<link href="~/admin/assets/css/teacher.css" rel="stylesheet" />

<form asp-action="EditCourse" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />

    <input type="text" name="Name" value="@Model.Name" placeholder="Course Name" required />
    <textarea name="Description" placeholder="Description" required>@Model.Description</textarea>
    <textarea name="FullDescription" placeholder="Full Description" required>@Model.FullDescription</textarea>
    <input type="number" name="Price" value="@Model.Price" placeholder="Price" required />
    <input type="number" name="Seat" value="@Model.Seat" placeholder="Seat" required />
    <input type="text" name="Duration" value="@Model.Duration" placeholder="Duration" required />
    <input type="text" name="Level" value="@Model.Level" placeholder="Level" required />
    <input type="number" name="Lesson" value="@Model.Lesson" placeholder="Lesson" required />
    <input type="file" name="Image" />
    <input type="number" name="Rating" value="@Model.Rating" placeholder="Rating" required />
    <input type="number" name="Class" value="@Model.Class" placeholder="Class" required />
    <input type="number" name="Student" value="@Model.StudentCount" placeholder="Student" required />
    <input type="datetime-local" name="StartTime" value="@Model.StartTime.ToString("yyyy-MM-dd")" required />
    <input type="datetime-local" name="EndTime" value="@Model.EndTime.ToString("yyyy-MM-dd")" required />
    <select name="CourseCategoryId">
        @foreach (var category in Model.CourseCategories)
        {
            <option value="@category.Id">@category.Name</option>
        }
    </select>
    <button type="submit">Update Course</button>
</form>


