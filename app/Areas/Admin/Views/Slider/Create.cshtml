@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
 
}


<div class="container mt-5 ml-3">
    <h3>Add Slider Image :</h3>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="card">
            <label class="input">
                <h5>Select Image :</h5>
                <input asp-for="Images" class="input__field field" />
                <span class="text-danger" asp-validation-for="Images"></span>
            </label>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="Title" class="control-label text-white-50"></label>
                <input asp-for="Title" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-white-50"></label>
                <input asp-for="Description" class="form-control" />

            </div>
            <div class="button-group mt-2">
                <button class=" btn btn-primary">Submit</button>
                <a class="btn btn-success" asp-action="Index">Back</a>
            </div>
        </div>


      

    </form>
</div>
