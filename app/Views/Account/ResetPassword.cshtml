@model ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Reset Password</title>
    <link rel="stylesheet" href="~/Account/StyleSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
    <div class="login-form">
        <div class="text">
            <h2>Reset Password</h2>
        </div>
        <form asp-action="ResetPassword" method="post">

            <div class="field">
                <div class="fas fa-envelope"></div>
                <input asp-for="Email" type="text" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="field">
                <div class="fas fa-lock"></div>
                <input asp-for="Password" type="password" placeholder="Password" id="password">
                <div class="icon fas fa-eye" data-input="password"></div>
            </div>
            <div class="field">
                <div class="fas fa-lock"></div>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" id="confirm-password">
                <div class="icon fas fa-eye" data-input="confirm-password"></div>
            </div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
            Not a member?
            <a asp-action="SignIn">Login</a>
            <div class="link">
            </div>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Account/js/JavaScript.js"></script>
</body>
</html>
