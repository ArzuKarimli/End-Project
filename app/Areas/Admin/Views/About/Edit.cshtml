@model AboutEditVM
@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container mt-5 ml-3">
    <h3>Edit Product</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="card">
            <div class="form-group">
                <h5>Name</h5>
                <input asp-for="SectionName" class="form-control" placeholder="SectionName" />
                <span class="text-danger" asp-validation-for="SectionName"></span>
            </div>
      
            <div class="form-group">
                <h5>Description</h5>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>


                <h5>Images:</h5>
                <div class="image-gallery">
                <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="~/assets/images/@Model.Image" />
                </div>
                <div class="input">
                    <h5>Upload New Images:</h5>
                    <input asp-for="Images" class="input__field field" type="file" multiple />
                    <span class="text-danger" asp-validation-for="Images"></span>
                </div>
                <div class="button-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-success" asp-action="Index">Back</a>
                </div>
            </div>
    </form>
</div>


