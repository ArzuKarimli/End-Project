@model SliderDetailVM
@{
    ViewData["Title"] = "Detail";
  
}
<div class="container">
    <div class="card">
        <label class="input">
            <h5>Detail</h5>
            <img src="~/assets/images/@Model.Image" width="200px" height="120px " />
            <div class="mt-3">
                <h6 class="text-white-50"><strong>Slider Title:</strong></h6>
                <p class="text-white-50">@Model.SliderInfo.Title</p>
                <h6 class="text-white-50"><strong>Slider Description:</strong></h6>
                <p class="text-white-50">@Model.SliderInfo.Description</p>
            </div>
        </label>
        <div class="button-group">

            <a class="btn btn-success" asp-action="Index">Back</a>
        </div>



        
    </div>
</div>
