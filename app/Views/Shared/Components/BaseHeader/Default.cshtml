@model BaseHeaderVM

<div class="edulearn">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="d-flex align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>
                            <span class="elemspan">Mail Us</span>
                            <p class="domain">@User.Identity.Name</p>
                        </div>
                    }
                    <a asp-controller="Account" asp-action="SignUp" class="mx-3">
                        <i class="fas fa-envelope-open-text mail"></i>
                    </a>
                    <div>
                        <span class="elemspan">Mail Us</span>
                        <p class="domain">@Model.Settings["Email1"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-12 d-flex align-items-start justify-content-center">
                <img src="~/assets/images/@Model.Settings["Logo"]" alt="Logo">
            </div>
            <div class="col-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-phone-alt icon-volume"></i>
                    <div>
                        <p class="d-block pelement">Call Us</p>
                        <p class="number">@Model.Settings["Phone1"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

