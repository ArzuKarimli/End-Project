@model ContactVM
@{
    ViewData["Title"] = "Index";
}
@section Styles {
    <link rel="stylesheet" href="~/assets/css/contact.css" />
}
<main>
    <section id="googlemap">
        <div class="container mt-5">
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d48635.92160091876!2d49.820467199999996!3d40.370176!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2saz!4v1723994013275!5m2!1sen!2saz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

    </section>
    <section id="contact">
        <div class="container contact mt-5 ">
            <div class="row footer-contact mt-5">
                <div class="col-md-4">
                    <div class="contact-info">
                        <i class="fas fa-map-marker-alt"></i>
                        <h4>Address</h4>
                        <p>@Model.Settings["Address1"]</p>
                        <p>@Model.Settings["Address2"]</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class=" bef-aft">

                        <i class="fas fa-phone-alt"></i>
                        <h4>Phone Number</h4>
                        <p>@Model.Settings["Phone1"]</p>
                        <p>@Model.Settings["Phone2"]</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class=" bef-aft">
                        <i class="fas fa-map-marker-alt"></i>
                        <h4>Email Address</h4>
                        <p>@Model.Settings["Email1"]</p>
                        <p>@Model.Settings["Email2"]</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="comment-area ">
        <div class="container mt-5">
            <h4 class="text-black"><strong>Leave Comment</strong></h4>
            <div class="comments mt-5">
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-action="Index">
                            <input type="text" asp-for="Name" class="w-100 form-control border-0 py-3 mb-4" placeholder="@User.Identity.Name">
                            <input type="email" asp-for="Email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email">
                            <textarea asp-for="Message" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Your Message"></textarea>
                            <button class=" btn btn-danger text-white " type="submit">Submit</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="Index">
                            <input type="text" asp-for="Name" class="w-100 form-control border-0 py-3 mb-4" placeholder="Your Name">
                            <input type="email" asp-for="Email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email">
                            <textarea asp-for="Message" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Your Message"></textarea>
                            <button class=" btn btn-danger text-white " type="submit">Submit</button>
                        </form>
                    }

                </div>
            </div>
        </div>


    </section>
</main>

