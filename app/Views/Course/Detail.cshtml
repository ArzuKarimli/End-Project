                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="search">
                        <h3>Search Courses</h3>
                        <div class="search-container">
                            <input type="text" class="search-input" placeholder="Search...">
                            <button class="search-button">Search</button>
                        </div>
                    </div>
                    <div class="categories">

                        <div class="mb-4">
                            <h3>CATEGORIES</h3>
                            <ul class="list-unstyled product-categorie">
                              @foreach (var item in Model.Courses.GroupBy(m=>m.CourseCategory).Select(m=>m.Key).ToList())
                                {
                                    <li>
                                        <div class="d-flex justify-content-between product-name">
                                            <a href="#"><i class="fa-solid fa-angle-right"></i>@item.Name</a>
                                            <span class="count">(@item.Courses.Count())</span>
                                        </div>
                                    </li>
                                }
                               
                            </ul>
                        </div>
                    </div>

                    <div class="latest-courses">
                        <h3>LATEST COURSES</h3>

                      @foreach (var item in Model.Courses.OrderByDescending(m=>m.Date).Take(4))
                        {
                            <div class="course-box mt-3">
                                <div class="img-box"><img src="~/assets/images/courses/@item.Image" alt=""></div>
                                <div class="info-box">
                                    <h4><a href="">@item.Name</a></h4>
                                    <div class="info">
                                        <span class="clock">
                                            <i class="fa-regular fa-clock"></i>@item.Duration
                                            Years
                                        </span><span class="price">Price: <span>$@item.Price</span></span>
                                    </div>
                                </div>
                            </div>
                       }

                    </div>

                    <div class="tags">
