@model BaseHeaderVM
<div class="apply">
    <div class="container">
        <div class="intro">
            <div class="d-flex ml-3 welcome-head">
                <i class="fas fa-university iconuni"></i>
                <p class="element-p">Welcome to Edulearn</p>
            </div>
            <div class="d-flex icons-head">
                <div class="d-flex icons">
                    <i class="fab fa-facebook-f fb"></i>
                    <i class="fab fa-twitter tw"></i>
                    <i class="fab fa-google-plus-g gg"></i>
                    <i class="fab fa-linkedin-in link"></i>
                </div>
                @if (!User.IsInRole("Teacher"))
                {
                    <form asp-controller="account" asp-action="RegisterTeacher">
                        <button type="submit" class="button-27 mx-3">Become a teacher</button>
                    </form>
                }


            </div>
        </div>
    </div>
</div>
<div class="edulearn">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="d-flex align-items-center">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
                    {
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="mx-3">
                            <i class="fas fa-user-cog mail"></i>
                        </a>
                        <div>

                            <h5 class="domain"><strong>@User.Identity.Name</strong></h5>
                            <form asp-controller="Account" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button class="px-1 btn btn-danger btn-logout mt-2" type="submit">Log Out</button>
                            </form>
                        </div>

                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
                    {
                        <a  asp-controller="Account" asp-action="SignIn" class="mx-3">
                            <i class="fas fa-envelope-open-text mail"></i>
                        </a>
                        <div>

                            <h5 class="domain"><strong>@User.Identity.Name</strong></h5>
                            <form asp-controller="Account" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button class="px-1 btn btn-danger btn-logout mt-2" type="submit">Log Out</button>
                            </form>
                        </div>                      
                    }
                    else if(!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="SignIn" class="mx-3">
                            <i class="fas fa-envelope-open-text mail"></i>
                        </a>
                        <div>
                            <span class="elemspan">Sign In</span>
                            <p class="domain">@Model.Settings["Email1"]</p>
                        </div>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Teacher"))
                    {
                        <a  asp-controller="Teacher" asp-action="Profile" class="mx-3">
                            <i class="far fa-user-circle mail" style="color: #bd0f0f;"></i>
                        </a>
                      <div>
                            <h5 class="domain"><strong>@User.Identity.Name</strong></h5>
                            <form asp-controller="Account" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button class="px-1 btn btn-danger btn-logout" type="submit">Log Out</button>
                            </form>
                      </div>
                    }

                </div>
            </div>
            <div class="col-md-4 col-12 d-flex align-items-start justify-content-center">
                <img src="~/assets/images/@Model.Settings["Logo"]" alt="Logo">
            </div>
            <div class="col-4">
                <div class="d-flex align-items-center phone justify-content-end">
                    <i class="fas fa-phone-alt icon-volume"></i>
                    <div>
                        <p class="d-block pelement">Call Us</p>
                        <p class="number">@Model.Settings["Phone1"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

