@model SliderEditVM

@{
    ViewData["Title"] = "Edit Slider";
}

<div class="container mt-5 ml-3">
    <h3>Edit Slider Image:</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="card">
            <div class="form-group">
                <label asp-for="NewImage" class="control-label text-black"><strong>Select New Image</strong></label>
                <input asp-for="NewImage" type="file" class="form-control" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderInfo.Title" class="control-label text-black"><strong>Title:</strong></label>
                <input asp-for="SliderInfo.Title" class="form-control" />
            </div>
            <div class="form-group">
                <h6 class="text-black"><strong>Description:</strong></h6>
                <input asp-for="SliderInfo.Description" class="form-control" />

            </div>
            <div class="button-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-success" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>


